# ------------------------------ compiler options ------------------------------
NAME		=	megaphone
CXX			=	clang++ -std=c++2a
CXXFLAGS	=	-Wall -Wextra -Werror
CXXOPTIONS	=	-O2 -ffast-math
# ------------------------------- linker options -------------------------------
LIBRARY		=	
OBJS_DIR	=	../obj
INCLUDE_DIR	=	.
SCRS_DIR	=	.
# ------------------------------- project sorces -------------------------------
SRCS		=	\
				megaphone
# ------------------------------------------------------------------------------
HDRS		=	

# ======================= UNCHANGEABLE PART OF MAKEFILE ========================
# ------------------------------------------------------------------------------
RM			=	rm -f
OBJS		=	$(addprefix ${OBJS_DIR}/,${SRCS:=.o})
DEPS		=	$(addprefix ${INCLUDE_DIR}/,${HDRS:=.h})
INCLUDE		=	-I ${INCLUDE_DIR}

# ------------------------------------------------------------------------------
all:			${OBJS_DIR}
	@$(MAKE)	$(NAME) -j

# ------------------------------------------------------------------------------
${OBJS_DIR}/%.o: ${SCRS_DIR}/%.cpp ${DEPS} Makefile
	${CXX}		${CXXFLAGS} ${CXXOPTIONS} -c -o $@ $< ${INCLUDE}

# ------------------------------------------------------------------------------
$(NAME):		${OBJS} ${DEPS}
	${CXX}		-o ${NAME} ${CXXFLAGS} ${CXXOPTIONS} ${OBJS} ${LIBRARY}

# ------------------------------------------------------------------------------
clean:
	${RM}		${OBJS}

# ------------------------------------------------------------------------------
fclean:			clean
	${RM}		${NAME}

# ------------------------------------------------------------------------------
re:				fclean all

# ------------------------------------------------------------------------------
${OBJS_DIR}:
	mkdir		-p ${OBJS_DIR}

# ------------------------------------------------------------------------------
.PHONY:			all clean fclean re
